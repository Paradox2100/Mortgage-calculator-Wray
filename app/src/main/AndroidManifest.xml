<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobileappdevelopment.mortgage_calculator_wray">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Mortgage_Input">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Mortgage_Output"
            android:label="@string/title_activity_mortgage__output"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Payment_Summary"
            android:label="@string/title_activity_payment__summary"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>